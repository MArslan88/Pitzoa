<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/background_pic"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/menu_pic_width"
        android:layout_height="@dimen/list_item_height" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/flavour_heading"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:text="Seekh Kabab Overloaded"
            android:layout_gravity="bottom"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorHeadingText"/>

        <TextView
            android:id="@+id/flavour_detail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:text="Topped with Seekh Kabab chunks on tantalizing blend of spicy chicken, onions, capsicum, green pepper and cheese"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorDescriptionText"/>



    </LinearLayout>

</RelativeLayout>